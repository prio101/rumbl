<h1>Login</h1>

<%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
  <div class="form-group">
    <%= text_input f, :username,
                      placeholder: 'UserName',
                      class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= password_input f, :password,
                      placeholder: 'password',
                      class: 'form-control' %>
  </div>

  <%= submit "Log In", class: "btn btn-primary" %>
<% end %>
